<style>
    .heading {
        font-family: monospace;
        font-size: 1.5rem;
        color: #444;
        margin-bottom: 2rem;
    }

    .form_label {
        font-family: monospace;
        font-size: .9rem;
    }

    .error_heading {
        font-family: monospace;
        font-size: 1rem;
        color: red;
        margin-bottom: 2rem;
    }

    .error_message {
        font-family: monospace;
        font-size: .9em;
        color: #222;
        margin-bottom: 2rem;
    }
    .table_content {
        font-family: monospace;
        color: #222;
    }
</style>

<div class='flex flex-col'>
<h1 class='heading'> Edit Blog </h1>

<% if(@blog.errors.any?) %>
    <h2 class='error_heading'>These Errors are preventing Editing of Blog</h2>
    <ul>
        <% @blog.errors.full_messages.each do |error| %>
             <li class='error_message'> <%=error%> </li>
        <%end%>
    </ul>
<%end%>

<%= form_with(model: @blog, local: true)  do |f| %>

    <p class='form_label'>
        <%= f.label :title %>
        <br/> 
        <%= f.text_field :title %>
    </p>

    <p class='form_label'>
        <%= f.label :description%>
        <br/>
        <%= f.text_area :description%>
    </p>

    <p>
        <%=f.submit%>
    </p>

<% end %>

<p class='table_content pt-10 text-[1rem] font-bold'> <%=link_to 'Show all blogs', blogs_path %> </p>
</div>
